extends layout

block content
  h1= article.title
  h5 Written by #{author}
  hr
  br
  p= article.body
  br
  hr
  if user
    if user.id == article.author
      .col-md-1
        a.btn.btn-info(href='/articles/edit/'+article._id) Edit
      .col-md-1
        a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete
